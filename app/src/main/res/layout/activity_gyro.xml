            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_background_normal"
            android:text="0"
            android:digits="0123456789"
            android:maxLength="3"
            android:inputType="number"
            android:textAlignment="center" />
